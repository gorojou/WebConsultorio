@using System.Configuration
<style>
    .currentactive-pop-message {
        background-color: #04abe9;
    }

    .common-pop-messages {
        background-color: lightgray;
    }

    .pop-messages-container {
        position: fixed;
        right: 0;
        bottom: 0;
        padding: 0 15px;
        z-index: 10;
        display: flex;
        align-items: flex-end;
    }

    .pop-messages {
        background: white;
        width: 20vw;
        height: 60vh;
        margin: 0 15px;
        display: flex;
        flex-direction: column;
    }

    .pop-messages-container .mdbc-chat-container {
        height: 90%;
    }

    .pop-messages.inactive {
        height: 100%;
        width: 15vw;
    }

        .pop-messages.inactive .mdbc-chat-title {
            background-color: white !important;
            color: black !important;
            font-weight: bold;
        }

        .pop-messages.inactive .mdbc-chat-container {
            display: none;
        }

    .pop-messages .mdbc-chat-messages {
        max-height: calc(100% - 50px);
    }

    .pop-messages .loader-container {
        padding: 10vh 1.5rem;
    }

    .pop-messages .close {
        position: absolute;
        right: 0;
        padding: 0 .5rem;
        height: 100%;
        top: 0;
    }
</style>

